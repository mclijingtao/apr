.userbox {
	height: 40vh;
	width: 100%;
	position: fixed;
	top: 0;
	left: 0;
}

.card {
	width: 80%;
	height: 400rpx;
	position: relative;
	top: 12vh;
	margin: 0 auto;
	border-radius: 50rpx;
	background-color: rgba(18, 17, 34, 0.904);
	box-shadow: 0 20px 60px 0 rgb(14 42 90 / 55%);
}

.card .userIco {
	position: absolute;
	top: 35%;
	left: 10%;
	transform: translateY(-50%) scale(1.15);
}

.card .userIco.login {
	background-color: transparent;
	background-size: 100rpx 100rpx;
	background-repeat: no-repeat;
}

.card .userIco+text {
	position: absolute;
	top: 22%;
	left: 37%;
	transform: translateY(-50%);
	font-size: 42rpx;
}

.card .cu-btn {
	position: absolute;
	top: 48%;
	left: 40%;
	transform: translateY(-50%);
	width: 300rpx;
	height: 80rpx;
	font-size: 36rpx;
}

.card .nickName {
	position: absolute;
	top: 22%;
	left: 60%;
	transform: translateY(-50%);
	font-size: 46rpx;
}

.cu-modal.bottom-modal {
	z-index: 99;
}

.cu-dialog {
	height: 68vh;
	border-radius: 5% 5% 0 0 !important;
	bottom: 25px;
}

.cu-dialog .cu-bar {
	padding-right: 40rpx;
}

.cu-dialog .padding-xl {
	height: calc(68vh - 100px);
}

.about {
	width: 100%;
	height: calc(65vh - 50px);
	position: relative;
	top: 32vh;
	border-radius: 5% 5% 0 0;
	overflow: hidden;
}

.about .bg-white {
	width: 100%;
	height: 130rpx;
	padding: 30rpx;
	display: flex;
}

.about .bg-white view {
	flex: 1;
	text-align: center;
	line-height: 70rpx;
	font-size: 42rpx;
}

.about .bg-white view:first-child {
	border-right: 5rpx solid gray;
}

.about .bg-white text {
	margin-left: 10rpx;
}

.cu-list.menu>.cu-item {
	min-height: 120rpx;
}

.cu-list.menu>.cu-item .content {
	font-size: 36rpx;
}

.cu-list.card-menu {
	margin: 70rpx 40rpx 0;
}